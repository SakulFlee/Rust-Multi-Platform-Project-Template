ARG RUST_VERSION=1.92
FROM rust:${RUST_VERSION}

# Set environment variables early to ensure Rust tools are in PATH
ENV PATH="/root/.cargo/bin:${PATH}"
ENV CARGO_TERM_COLOR=always
ENV RUST_BACKTRACE=1

# Install MinGW-w64 for Windows cross-compilation
RUN apt-get update && apt-get install -y \
    gcc-mingw-w64 \
    mingw-w64 \
    && rm -rf /var/lib/apt/lists/*

# Set up MinGW environment variables
ENV CC_x86_64_pc_windows_gnu=x86_64-w64-mingw32-gcc
ENV CXX_x86_64_pc_windows_gnu=x86_64-w64-mingw32-g++
ENV AR_x86_64_pc_windows_gnu=x86_64-w64-mingw32-gcc-ar
ENV CARGO_TARGET_X86_64_PC_WINDOWS_GNU_LINKER=x86_64-w64-mingw32-gcc

# Set up the working directory
WORKDIR /workspace

# Copy the project files
COPY . .

# Install Rust target for Windows and ensure Rust environment is properly set up
RUN rustup self update && \
    rustup target add x86_64-pc-windows-gnu

# Default command
CMD ["bash"]
